rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read to all documents
    match /{document=**} {
      allow read;
    }
    // Specifically allow writes to the `artworks` collection for signed-in users
    match /artworks/{document} {
      allow write: if request.auth.uid != null;
    }
  }
}